@model ProfileViewModel

@{
    ViewData["Title"] = "Profil Düzenleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="auth-title">Profil Bilgilerini Düzenle</h2>

<form asp-action="Profile" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    
    <div class="text-center mb-4">
        <div class="profile-picture-container mb-3">
            <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                 class="rounded-circle" 
                 width="100" 
                 height="100" 
                 alt="Profil Resmi" 
                 id="profilePicturePreview" />
        </div>
        <input type="file" asp-for="ProfilePicture" class="form-control d-none" id="profilePictureInput" accept="image/*" />
        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="document.getElementById('profilePictureInput').click()">
            <i class="fas fa-camera"></i> Resim Değiştir
        </button>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label">Ad</label>
            <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
            <span asp-validation-for="FirstName" class="field-validation-error"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label">Soyad</label>
            <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
            <span asp-validation-for="LastName" class="field-validation-error"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" readonly />
        <small class="form-text text-muted">E-posta değiştirmek için lütfen destek ekibiyle iletişime geçin.</small>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numaranız" />
        <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label">Hakkımda</label>
        <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Kendinizden bahsedin..."></textarea>
        <span asp-validation-for="Bio" class="field-validation-error"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-auth">Profili Güncelle</button>
        <a asp-action="ChangePassword" class="btn btn-outline-secondary">Şifre Değiştir</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-link text-decoration-none">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('profilePictureInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePicturePreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}